<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash_Activity">

    <ImageView

        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imgDog"
        android:src="@drawable/dog" />

    <TextView
        android:layout_toRightOf="@+id/imgDog"
        android:id="@+id/txtTextoA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Texto A"
        android:textColor="#ff9381"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_below="@+id/imgDog"
        android:id="@+id/txtTextoB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Texto B"
        android:textColor="#FFC107"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_below="@+id/txtTextoB"
        android:id="@+id/txtTextoC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Texto C"
        android:textColor="#3F51B5"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_toRightOf="@id/txtTextoB"
        android:id="@+id/txtTextoD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto D"
        android:textColor="#185036"
        android:textSize="30sp"
        android:textStyle="bold" />


</RelativeLayout>